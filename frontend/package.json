{
  "name": "rhinotime",
  "private": true,
  "type": "module",
  "version": "1.0.2",
  "author": "Aung Nanda Oo",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "NODE_ENV=DEV electron electron/main.mjs",
    "build": "vite build && electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "start": "electron electron/main.js"
  },
  "repository": "https://github.com/NikkiAung/RhinoTime",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "main": "electron/main.mjs",
  "build": {
    "appId": "com.rhinotime.app",
    "productName": "RhinoTime",
    "asar": true,
    "extends": null,
    "electronVersion": "34.1.1",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "build/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null,
      "signIgnore": [".*\\.js", ".*\\.htm", ".*\\.html", ".*\\.json", ".*\\.css", ".*\\.svg"],
      "asarUnpack": ["**/*.node"],
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Please allow access to system events",
        "NSCameraUsageDescription": "Please allow access to camera",
        "NSMicrophoneUsageDescription": "Please allow access to microphone"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/win/icon.ico",
      "publisherName": "Aung Nanda Oo",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icons/linux",
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/icons/",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.4",
    "@mui/material": "^6.4.4",
    "@tailwindcss/vite": "^4.0.6",
    "axios": "^1.7.9",
    "daypilot-pro-react": "^0.0.0",
    "electron-updater": "^6.3.9",
    "electron-windows-notifications": "^3.0.8",
    "node-cron": "^3.0.3",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.5",
    "react-toastify": "^11.0.3",
    "styled-components": "^6.1.15",
    "tailwindcss": "^4.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "electron-icon-maker": "^0.0.5",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "vite": "^6.1.0"
  }
}
